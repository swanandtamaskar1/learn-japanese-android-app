<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About"
    android:orientation="vertical"
    android:background="#e3f2fd">

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="'Learn Japanese'\n\nDeveloped under project for 'SDL - Java and Android'\n\nIDE : Android Studio 3.2.0\nDatabase: Google Firebase Realtime*\n\nDevelopers:\nSaurabh Sutar\nHimanshu Prasad\nSwanand Tamaskar"
        android:textAppearance="?android:textAppearanceMedium" />
    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_margin="20dp"
        android:background="@color/primary_color"
        android:text="Back to Main"/>
</LinearLayout>